@model IEnumerable<KursKayit>


    <h2>Kayıt Listesi</h2>

<a asp-action="Create" class="btn btn-primary">Kayıt Ekle</a>
    <table class="table">
        <thead>
            <tr>
            <th style="width:150px;">@Html.DisplayNameFor(m => m.KayitId)</th>

            <th >@Html.DisplayNameFor(m => m.Ogrenci.OgrenciId)</th>
            <th>@Html.DisplayNameFor(m => m.Kurs.Baslık)</th>

            <th style="width:150px;"></th>
            </tr>

        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KayitId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ogrenci.OgrenciAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kurs.Baslık)
                </td>
                <td>
                  <a  asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-primary" >Edit</a>
                   <a  asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-danger" >Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>