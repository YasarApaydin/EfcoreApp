@model KursViewModel

<h2>Kurs Ekle</h2>
<hr />
<form method="post" asp-controller="Kurs" asp-action="Create" >
    <strong class="text-danger"><div asp-validation-summary="All"></div></strong>
    <div class="mb-3">
        <label asp-for="Baslık" class="form-label"></label>
        <input asp-for="Baslık" class="form-control" />
    
    </div>
    <div class="mb-3">
        <label asp-for="OgretmenId" class="form-control" >Öğretmen</label>
        <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select" >
            <option value="">Seciniz</option>
        </select>
    </div>
    
    <button class="btn btn-secondary" type="submit">Kaydet</button>
</form>