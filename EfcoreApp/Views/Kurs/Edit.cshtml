@model KursViewModel


<h2>Kurs Günçelleme</h2>
<hr />


<div class="row">
    <div class="col-8">
        <form method="post" asp-controller="Kurs" asp-action="Edit">
            <strong class="text-danger"><div asp-validation-summary="All"></div></strong>
            <input type="hidden" asp-for="KursId" />
            <div class="mb-3">
                <label asp-for="Baslık" class="form-label">Kurs Adı</label>
                <input asp-for="Baslık" class="form-control" />

            </div>
            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-control">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option value="">Seciniz</option>
                </select>
            </div>
            <button class="btn btn-secondary" type="submit">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr />
        <ul>
            @foreach (var item in Model.KursKayitlari)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
       

    </div>
</div>

