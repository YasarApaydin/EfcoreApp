@model Ogrenci


<h2>Öğrenci Ekle</h2>
<hr />
<form method="post" asp-controller="Ogrenci" asp-action="Create" >
   
    <div class="mb-3">
        <label asp-for="OgrenciAd" class="form-label">Öğrenci Adı</label>
        <input asp-for="OgrenciAd" class="form-control" />
    
    </div>
    <div class="mb-3">
        <label asp-for="OgrenciSoyad" class="form-label">Öğrenci Soyad</label>
        <input asp-for="OgrenciSoyad" class="form-control" />

    </div>
    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Öğrenci Eposta</label>
        <input asp-for="Eposta" class="form-control" />

    </div>
    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Öğrenci Telefon</label>
        <input asp-for="Telefon" class="form-control" />

    </div>
    <button class="btn btn-secondary" type="submit">Kaydet</button>
</form>